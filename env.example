# Google OAuth Configuration (REQUIRED for multi-user login)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Session Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-5  # Options: gpt-5, gpt-4o, gpt-4-turbo, gpt-4o-mini

# Application Settings
POLL_INTERVAL_SECONDS=120
DB_URL=sqlite:///./email_agent.db
FROM_DISPLAY="Your Name"
DEFAULT_SIGNATURE="\n\nâ€” Your Name"

# Legacy Email Configuration (optional, for backward compatibility)
IMAP_HOST=imap.gmail.com
IMAP_USER=you@gmail.com
IMAP_PASS=app_password_or_oauth_token
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@gmail.com
SMTP_PASS=app_password_or_oauth_token

